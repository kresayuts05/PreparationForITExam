@model QuestionFormViewModel
@{
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<section>

    <h2 class="text-center">Добави тестови въпрос с избираем отговор</h2>
    <hr />


    <div class="row cont">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="@Model.UserId" />
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Съдържание на въпроса <span class="mandatory">*</span></label>
                    <textarea asp-for="@Model.Description" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Колко бита има в един байт?"></textarea>
                </div>
                <div class="mb-3">
                    <label class="image">Снимка във въпроса</label>
                    <label class="btn h-full-width" for="uploadProfilePicture">Прикачи снимка за въпроса</label>
                    <input asp-for="Image" id="uploadProfilePicture" class="upload-photo" for="Image" accept="image/gif, image/jpeg, image/png">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <img alt="Upload an image" accept="image/gif, image/jpeg, image/png" style="display:none;">
                </div>
                <div>
                    <label for="sampleInput">Верен Отговор <span class="mandatory">*</span></label>
                    <input asp-for="RightAnswer" class="h-full-width" type="text" placeholder="8" required>
                    <span asp-validation-for="RightAnswer" class="text-danger"></span>
                </div>
                <div>
                    <label for="sampleInput">Отговор 2 <span class="mandatory">*</span></label>
                    <input asp-for="Answer2" class="h-full-width" type="text" placeholder="1" required>
                    <span asp-validation-for="Answer2" class="text-danger"></span>
                </div>
                <div>
                    <label for="sampleInput">Отговор 3 <span class="mandatory">*</span></label>
                    <input asp-for="Answer3" class="h-full-width" type="text" placeholder="4" required>
                    <span asp-validation-for="Answer3" class="text-danger"></span>
                </div>
                <div>
                    <label for="sampleInput">Отговор 4 <span class="mandatory">*</span></label>
                    <input asp-for="Answer4" class="h-full-width" type="text" placeholder="0" required>
                    <span asp-validation-for="Answer4" class="text-danger"></span>
                </div>
                <div>
                    <label for="sampleInput">Категория на въпроса:<span class="mandatory">*</span></label>
                    <select asp-for="@Model.CategoryId" name="categoryId" id="category">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <input id="save" class="btn btn-success" type="submit" value="Запази" />
                    <a asp-controller="Test" asp-action="Index"  class="btn btn-danger">Отмени</a>
                </div>
                <div id="loading" hidden>
                    <img id="loading-image" src="~/loader.gif" alt="Loading..." />
                </div>
            </form>
        </div>
    </div>
</section>
