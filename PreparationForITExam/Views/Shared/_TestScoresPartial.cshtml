    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <div class="row">
            <!-- column -->
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <!-- title -->
                        <div class="d-md-flex">
                            <div>
                                <h4 class="card-title">Всички резултати от завършени тестове</h4>
                            </div>
                        </div>
                        <!-- title -->
                    </div>
                    <div class="table-responsive">
                        <table class="table v-middle">
                            <thead>
                                <tr class="bg-light">
                                    <th style="width: 20em;" class="border-top-0">Име</th>
                                    <th style="width: 12em;" class="border-top-0">Роля</th>
                                    <th style="width: 12em;" class="border-top-0">Резултат</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TestScores.Count == 0)
                                {
                                    <tr>
                                        <div>Все още няма резултати</div>
                                    </tr>
                                }
                                else
                                {

                                    @foreach (var u in Model.TestScores)
                                    {
                                        <tr>
                                            <td style="vertical-align: middle; font-size: medium;">
                                                <div class="d-flex align-items-center">
                                                    <div class="m-r-10">
                                                        <div class="testimonial-img">
                                                            <img src="@u.ProfilePicturUrl">
                                                        </div>
                                                    </div>
                                                    <div style="margin-left:15px;">
                                                        <h4 class="m-b-0 font-16">@u.UserName</h4>
                                                    </div>
                                                </div>
                                            </td>
                                            <td style="vertical-align: middle; font-size: medium;">@u.UserRole</td>
                                            <td style="vertical-align: middle; font-size: medium;">@u.Score / 13</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
