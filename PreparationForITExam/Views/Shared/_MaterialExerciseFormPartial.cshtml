@model MaterialFormViewModel

@{
}

<div class="row cont">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="@Model.LessonId" />
            <input type="hidden" asp-for="@Model.SectionOfCurricularId" />
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Обща информация</label>
                <textarea asp-for="Content" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label class="profilePictureLabel">Задачи<span class="mandatory">*</span></label>
                <label class="btn h-full-width" for="uploadPresentation">Прекачи Главен Документ Със Задачи</label>
                <input asp-for="Documents" id="uploadPresentation" class="upload-photo" for="FileInfo" multiple accept=".docx, .doc">
                <span asp-validation-for="Documents" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input id="save"  class="btn btn-success" type="submit" value="Запази" />
                <a asp-controller="SectionOfCurricular" asp-action="Index" asp-route-id="@Model.SectionOfCurricularId" class="btn btn-danger">Отмени</a>
            </div>
            <div id="loading" hidden>
                <img id="loading-image" src="~/loader.gif" alt="Loading..." />
            </div>
        </form>
    </div>
</div>


<script>
    $(window).on('load', function () {
        $("#loading").hide();
    });

    $("#save").click(function () {
        $("#loading").show();
    });
</script>

<style>
    #loading {
        position: fixed;
        display: block;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        text-align: center;
        opacity: 0.7;
        background-color: #fff;
        z-index: 99;
    }

    #loading-image {
        position: absolute;
        width: 300px;
        z-index: 100;
        top: 40%;
        margin: 0;
        right: 40%;
    }
</style>