@model List<List<SectionOfCurricularViewModel>>

<section id="curricular" class="curricular">
    <div class="container">
        <div class="curricular-head">
            <h3>Учебна програма</h3>
            <p>Учебната програма се състои от 4 модула. Зрелостният изпит включва изучаваният материал от суптветните модули. </p>
        </div>
        <div class="curricular-modules-info">
            <ul class="curricular-modules">
                <li>
                    <div class="single-list-topics-content">
                        <div class="single-list-topics-icon">
                            <i class="oop"></i>
                        </div>
                        <h2><a><b>ООП</b></a></h2>
                        <p>11 клас I ви срок</p>
                    </div>

                    <ul class="sections-of-curricular">
                        @foreach (var s in Model[0])
                        {
                            <a class="curricular-element" asp-controller="SectionOfCurricular" asp-action="Index" asp-route-id="@s.Id">
                            <li class="section-of-curricular">
                                <div class="section-header">
                                    <a class="">@s.Title</a>
                                </div>
                                <div class="section-info">
                                        @s.Lessons урока
                                    <span class="separator">|</span>
                                        @s.Tests тестове
                                </div>
                            </li>
                            </a>
                        }
                    </ul>
                </li>
                <li>
                    <div class="single-list-topics-content">
                        <div class="single-list-topics-icon">
                            <i class="algorithm"></i>
                        </div>
                        <h2><a>Data Structures and Algorithms</a></h2>
                        <p>185 listings</p>
                    </div>
                    <ul class="sections-of-curricular">
                        @foreach (var s in Model[1])
                        {
                            <a class="curricular-element" asp-controller="SectionOfCurricular" asp-action="Index" asp-route-id="@s.Id">
